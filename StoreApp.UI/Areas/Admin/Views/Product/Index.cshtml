@model IEnumerable<GetProductDto> 
@{
    // Admin layouts kullanıldığını varsayıyoruz
}

<h1>Ürün Yönetimi</h1>

<p>
    <!-- Yeni ürün ekleme butonu -->
    <a asp-area="Admin"
       asp-controller="Product"
       asp-action="Create"
       class="btn btn-success">
       Yeni Ürün Ekle
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th style="width: 200px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td> <!-- Örneğin: 100.00 TL şeklinde gözükecek -->
                <td>@product.Stock</td>
                <td>
                    <!-- Detay -->
                    <a asp-area="Admin"
                       asp-controller="Product"
                       asp-action="Detail"
                       asp-route-id="@product.Id"
                       class="btn btn-info btn-sm">
                       Detay
                    </a>
                    
                    <!-- Düzenle -->
                    <a asp-area="Admin"
                       asp-controller="Product"
                       asp-action="Update"
                       asp-route-id="@product.Id"
                       class="btn btn-warning btn-sm">
                       Düzenle
                    </a>
                    
                    <!-- Sil -->
                    <a asp-area="Admin"
                       asp-controller="Product"
                       asp-action="Delete"
                       asp-route-id="@product.Id"
                       class="btn btn-danger btn-sm">
                       Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
